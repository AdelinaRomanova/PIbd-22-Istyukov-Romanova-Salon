@using BeautySalonContracts.ViewModels;
@model List<VisitViewModel>
@{ ViewData["Title"] = "Visit"; }
<div class="text-center">
    <h1 class="display-4">Посещения</h1>
</div>

<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <p>
            <a class="btn btn-success" asp-action="VisitCreate">Добавить посещение</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Дата посещения
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-action="VisitUpdate" asp-route-visitId="@item.Id">Изменить</a>
                        </td>
                        <td>
                            <a asp-action="VisitDelete" asp-route-visitId="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>