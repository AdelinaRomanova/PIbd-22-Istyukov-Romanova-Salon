@using BeautySalonContracts.ViewModels;
@model PurchaseViewModel;
@{ ViewData["Title"] = "Создание покупки"; }

<div class="text-center">
    <h2 class="display-4">Создание покупки</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Дата:</div>
        <div class="col-8"><input type="text" name="procedureName" id="procedureName" /></div>
    </div>
     <div class="row">
        <div class="col-4">Дата:</div>
        <div class="col-4 form-group">
            <input asp-for="Date" id="datepicker" name="datepicker" value="@DateTime.Now.ToString("dd-MM-yyyy") class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Процедуры:</div>
        <div class="col-8">
            <select id="procedureId" name="procedureId" multiple="multiple" class="form-control" asp-items="@(new SelectList(@ViewBag.Procedures,"Id", "ProcedureName"))"></select>
        </div>
    </div>  
    <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Создать" class="btn btn-primary" />
        </div>
    </div>
</form>
