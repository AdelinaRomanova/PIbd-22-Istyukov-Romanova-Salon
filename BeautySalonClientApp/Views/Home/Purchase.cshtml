@using BeautySalonContracts.ViewModels;
@model List<PurchaseViewModel>
@{ ViewData["Title"] = "Процедуры"; }
<div class="text-center">
    <h1 class="display-4">Покупки</h1>
</div>
<div class="text-center">
    @{ if (Model == null)
                    {
        <h3 class="display-4">Авторизируйтесь</h3> return;
                    }
        <p>
            <a asp-action="CreateProcedure">Создать покупку</a>
        </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Номер
                                </th>
                                <th>
                                    Дата
                                </th>
                                <th>
                                    Общая стоимость
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        <a asp-action="UpdatePurchase" asp-route-Id="@item.Id">Изменить</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeletePurchase" asp-route-Id="@item.Id">Удалить</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table> }
</div>
